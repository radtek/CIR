<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Fetch all entities of a given type into an EntityCollection Instance</Title>
      <Shortcut>llblA_FetchAllEntities</Shortcut>
      <Description>Code snippet to fetch all entities of a given type into a new EntityCollection instance, adapter specific. </Description>
      <Author>Solutions Design</Author>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="true">
          <ID>AdapterVariable</ID>
          <ToolTip>The variable which holds the DataAccessAdapter instance reference</ToolTip>
          <Default>adapter</Default>
       </Literal>
       <Literal Editable="true">
          <ID>EntityCollectionVariable</ID>
          <ToolTip>The variable which holds the EntityCollection instance reference</ToolTip>
          <Default>myCollection</Default>
        </Literal>
        <Literal Editable="true">
          <ID>EntityFactory</ID>
          <ToolTip>The factory to pass to the EntityCollection constructor</ToolTip>
          <Default>MyEntityFactory</Default>
        </Literal>
      </Declarations>
      <Code Language="csharp"><![CDATA[EntityCollection $EntityCollectionVariable$ = new EntityCollection(new $EntityFactory$());
using(DataAccessAdapter $AdapterVariable$ = new DataAccessAdapter())
{      
	$AdapterVariable$.FetchEntityCollection($EntityCollectionVariable$, null);
	$end$
}]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>