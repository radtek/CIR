<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Fetch an entity using a unique constraint into a new instance</Title>
      <Shortcut>llblA_FetchSingleEntityUC</Shortcut>
      <Description>Code snippet to fetch a single entity using a unique constraint into a new instance, adapter specific. </Description>
      <Author>Solutions Design</Author>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="true">
          <ID>AdapterVariable</ID>
          <ToolTip>The variable which holds the DataAccessAdapter instance reference</ToolTip>
          <Default>adapter</Default>
       </Literal>
       <Literal Editable="true">
          <ID>EntityVariable</ID>
          <ToolTip>The variable which holds the Entity instance reference</ToolTip>
          <Default>toFetch</Default>
        </Literal>
       <Literal Editable="true">
          <ID>UniqueConstraintField</ID>
          <ToolTip>The field name which forms the unique constraint. If the UC has more fields, you've to repeat this line for the other fields as well</ToolTip>
          <Default>UniqueFieldName</Default>
        </Literal>
        <Literal Editable="true">
          <ID>UCValue</ID>
          <ToolTip>The value of unique constraint field</ToolTip>
          <Default>_uniqueValue</Default>
        </Literal>
        <Literal Editable="true">
          <ID>EntityType</ID>
          <ToolTip>The type of the entity to fetch</ToolTip>
          <Default>MyEntity</Default>
        </Literal>
        <Literal Editable="true">
          <ID>FetchResultVariable</ID>
          <ToolTip>The variable in which to store the fetch result</ToolTip>
          <Default>fetchResult</Default>
        </Literal>
      </Declarations>
      <Code Language="VB"><![CDATA[
Dim $EntityVariable$ As New $EntityType$()
$EntityVariable$.$UniqueConstraintField$ = $UCValue$

Using $AdapterVariable$ As New DataAccessAdapter()
	Dim $FetchResultVariable$ As Boolean = $AdapterVariable$.FetchEntityUsingUniqueConstraint($EntityVariable$, $EntityVariable$.ConstructFilterForUC$UniqueConstraintField$())
	If Not $FetchResultVariable$ Then
		' Not found. Place handle code here.
		$end$
	End If
End Using]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>